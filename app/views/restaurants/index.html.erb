<h1 class="mb-4">Restaurants</h1>

<div class="container-fluid">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex justify-content-center">
        <div class="card" style="width: 100%">
          <div class="card-body">
            <% if restaurant.category == "chinese" %>
              <h2>🥟</h2>
            <% elsif restaurant.category == "italian" %>
              <h2>🍝</h2>
            <% elsif restaurant.category == "japanese" %>
              <h2>🍣</h2>
            <% elsif restaurant.category == "french" %>
              <h2>🍽️</h2>
            <% elsif restaurant.category == "belgian" %>
              <h2>🍟</h2>
            <% end %>
            <h5 class="card-title"><%= restaurant.name %></h5>
            <p class="card-text"><%= restaurant.address %></p>
            <%= link_to "See details →", restaurant_path(restaurant), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "Add a new restaurant", "/restaurants/new", class: "btn btn-primary btn-lg" %>
